<head>
    <title>{{ wp_title }} | {{ site.title }}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" >

    {% if (function ('get_option', 'site_icon', false) == false) %}
        <link rel="apple-touch-icon" sizes="180x180" href="{{theme.path}}/assets/dist/images/favicons/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="{{theme.path}}/assets/dist/images/favicons/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="{{theme.path}}/assets/dist/images/favicons/favicon-16x16.png">
        <link rel="shortcut icon" type="image/x-icon" href="{{theme.path}}/assets/dist/images/favicons/favicon.ico">
        <meta name="msapplication-config" content="{{theme.path}}/assets/dist/images/favicons/browserconfig.xml">
    {% endif %}

    <link rel="manifest" href="{{theme.path}}/assets/dist/images/favicons/site.webmanifest">
    <link rel="mask-icon" href="{{theme.path}}/assets/dist/images/favicons/safari-pinned-tab.svg" color="#000000">
    <meta name="msapplication-TileColor" content="#da0000">
    <meta name="theme-color" content="#da0000">

    {{ function('wp_head') }}

    <script>
       document.documentElement.classList.remove("no-js");
    </script>
</head>
