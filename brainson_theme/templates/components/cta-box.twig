<div id="{{ object.data.uniqueid }}" class="{{ object.get_spacing_top_class_string }}">
    {% if not object.isNested and not object.data.full_width %}
        <div class="{{ object.get_container_class_string }}">
    {% endif %}

    <div class="bg-gray-100">

        {% if not object.isNested and object.data.full_width %}
            <div class="{{ object.get_container_class_string }} {% if object.data.image %}py-6{% endif %}">
        {% endif %}

        <div class="flex flex-col items-stretch sm:flex-row">

            {% if object.data.image %}
                <div class="min-h-full sm:w-1/2 lg:w-1/3">
                    {{get_attachment_image(object.data.image, 'c4-cta-box', 'object-cover min-h-full')}}
                </div>
            {% endif %}

            <div class=" {% if object.data.image %}sm:w-1/2 lg:w-2/3{% else %}w-full{% endif %}">
                <div class="{% if object.data.full_width and not object.data.image %}py-6 lg:py-12{% else %}p-6 lg:p-12{% endif %} flex flex-col {{ object.data.alignment }} {% if object.data.alignment == 'items-center' %}text-center{% elseif object.data.alignment == 'items-end' %}text-right{% endif %}">
                    {% if object.data.title %}
                        <h2 class="mt-0 text-2xl font-bold lg:text-3xl">
                            {{ object.data.title }}
                        </h2>
                    {% endif %}

                    {% if object.data.body %}
                        <div class="mt-3 c-text">
                            {{ object.data.body }}
                        </div>
                    {% endif %}

                    {% if object.data.buttons %}
                        <div class="flex mt-4 space-x-4">
                            {% for button in object.data.buttons %}
                                <a
                                    href="{{ button.link.url }}"
                                    target="{{ button.link.target }}"
                                    class="c-button {% if button.style == 'secondary' %}c-button--secondary{% endif %}"
                                >
                                    {{ button.link.title }}
                                </a>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>

        </div>

        {% if not object.isNested and object.data.full_width %}
            </div>
        {% endif %}

    </div>
    
    {% if not object.isNested and not object.data.full_width %}
        </div>
    {% endif %}
</div>