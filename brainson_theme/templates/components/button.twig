<div 
    id="{{ object.data.uniqueid }}" 
    class="{{ object.get_spacing_top_class_string }} {{ object.get_alternate_background_string }} {{ object.get_padding_top_class_string }} {{ object.get_padding_bottom_class_string }}"
>

    <div class="{% if not object.isNested %}{{ object.get_container_class_string }}{% endif %} flex space-x-4 {{object.data.alignment}}">

        {% for button in object.data.buttons %}

            {% include 'templates/partials/button.twig' with {
                type: 'a',
                href: button.link.url,
                target: button.link.target,
                text: button.link.title
            } %}

        {% endfor %}

    </div>

</div>
